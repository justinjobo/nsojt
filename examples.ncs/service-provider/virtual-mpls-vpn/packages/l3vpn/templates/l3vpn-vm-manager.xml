<config xmlns="http://tail-f.com/ns/config/1.0">
  <vm-manager xmlns="http://cisco.com/yang/nso/vm-manager"
              tags="merge">
    <start>
      <name>{$NAME}</name>
      <deployment-name>{$DEPNAME}</deployment-name>
      <vm-device>{$ESC}</vm-device>
      <tenant>{$TENANT}</tenant>
      <service-name>{$SERVICE_NAME}</service-name>
      <service-version>{$SERVICE_VERSION}</service-version>
      <vm-type>csr</vm-type>
      <vm-group>{$VM_GROUP}</vm-group>
      <day0-url>http://10.51.35.120/media/CSR_day0.txt</day0-url>
      <interface>
        <id>0</id>
        <name>net_osmgmt</name>
        <ip>192.168.131.4</ip>
      </interface>
      <interface>
        <id>1</id>
        <name>p_net</name>
        <ip>10.1.1.2</ip>
      </interface>
      <interface>
        <id>2</id>
        <name>ce_net</name>
        <ip>10.2.2.2</ip>
      </interface>
      <scaling-min>1</scaling-min>
      <scaling-max>3</scaling-max>
      <scaling-pool>
        <name>net_osmgmt</name>
        <address>
          <ip>192.168.131.4</ip>
        </address>
        <address>
          <ip>192.168.131.5</ip>
        </address>
        <address>
          <ip>192.168.131.6</ip>
        </address>
      </scaling-pool>
      <scaling-pool>
        <name>p_net</name>
        <address><ip>10.1.1.2</ip></address>
        <address><ip>10.1.1.3</ip></address>
        <address><ip>10.1.1.4</ip></address>
      </scaling-pool>
      <scaling-pool>
        <name>ce_net</name>
        <address><ip>10.2.2.2</ip></address>
        <address><ip>10.2.2.3</ip></address>
        <address><ip>10.2.2.4</ip></address>
      </scaling-pool>
    </start>
  </vm-manager>
</config>
