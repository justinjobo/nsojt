<config>
  <vrf xmlns="http://tail-f.com/ned/cisco-ios-xr">
    <vrf-list>
      <name>{/name}</name>
      <address-family>
        <ipv4>
          <unicast>
            <export>
              <route-target>
                <address-list>
                  <name>{/route-distinguisher}:1</name>
                </address-list>
              </route-target>
            </export>
            <import>
              <route-target>
                <address-list>
                  <name>{/route-distinguisher}:1</name>
                </address-list>
              </route-target>
            </import>
          </unicast>
        </ipv4>
      </address-family>
    </vrf-list>
  </vrf>
  <policy-map xmlns="http://tail-f.com/ned/cisco-ios-xr">
    <name>{/name}-{$CE}</name>
    <class>
      <class-default>
        <map>class-default</map>
        <shape>
          <average>
            <rate>{$BW}</rate>
            <rate-unit>bps</rate-unit>
          </average>
        </shape>
      </class-default>
    </class>
  </policy-map>
  <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
    <?if {starts-with($PE_INT_NAME,'GigabitEthernet')}?>
    <GigabitEthernet-subinterface>
      <GigabitEthernet>
        <id>{substring($PE_INT_NAME,16)}.{$VLAN_ID}</id>
        <description>Link to CE / {$CE} - {$CE_INT_NAME}</description>
        <ipv4>
          <address>
            <ip>{$LINK_PE_ADR}</ip>
            <mask>{$LINK_MASK}</mask>
          </address>
        </ipv4>
        <vrf>{/name}</vrf>
        <encapsulation>
          <dot1q>
            <vlan-id>{$VLAN_ID}</vlan-id>
          </dot1q>
        </encapsulation>
        <service-policy>
          <output>
            <name>{/name}-{$CE}</name>
          </output>
        </service-policy>
      </GigabitEthernet>
    </GigabitEthernet-subinterface>
    <?end?>
    <?if {starts-with($PE_INT_NAME,'TenGigE')}?>
    <TenGigE-subinterface>
      <TenGigE>
        <id>{substring($PE_INT_NAME,8)}.{$VLAN_ID}</id>
        <description>Link to CE / {$CE} - {$CE_INT_NAME}</description>
        <ipv4>
          <address>
            <ip>{$LINK_PE_ADR}</ip>
            <mask>{$LINK_MASK}</mask>
          </address>
        </ipv4>
        <vrf>{/name}</vrf>
        <encapsulation>
          <dot1q>
            <vlan-id>{$VLAN_ID}</vlan-id>
          </dot1q>
        </encapsulation>
        <service-policy>
          <output>
            <name>{/name}-{$CE}</name>
          </output>
        </service-policy>
      </TenGigE>
    </TenGigE-subinterface>
    <?end?>
  </interface>
  <route-policy xmlns="http://tail-f.com/ned/cisco-ios-xr">
    <name>{/name}</name>
    <value>pass</value>
  </route-policy>
  <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
    <bgp>
      <bgp-no-instance>
        <id>100</id>
        <vrf>
          <name>{/name}</name>
          <rd>{/route-distinguisher}:1</rd>
          <address-family>
            <ipv4>
              <unicast>
              </unicast>
            </ipv4>
          </address-family>
          <neighbor>
            <id>{$LINK_CE_ADR}</id>
            <remote-as>{$CE_AS_NUM}</remote-as>
            <address-family>
              <ipv4>
                <unicast>
                  <route-policy>
                    <direction>in</direction>
                    <name>{/name}</name>
                  </route-policy>
                  <route-policy>
                    <direction>out</direction>
                    <name>{/name}</name>
                  </route-policy>
                  <as-override>
                  </as-override>
                </unicast>
              </ipv4>
            </address-family>
          </neighbor>
        </vrf>
      </bgp-no-instance>
    </bgp>
  </router>
</config>
