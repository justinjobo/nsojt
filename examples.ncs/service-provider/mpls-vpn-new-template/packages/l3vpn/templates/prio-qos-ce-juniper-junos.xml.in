<configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm" tags="merge">
  <class-of-service>
    <interfaces>
      <interface>
        <name>{$PE_INT_NAME}</name>
        <unit>
          <name>{$VLAN_ID}</name>
          <scheduler-map>{$POLICY_NAME}</scheduler-map>
          <classifiers>
            <dscp>
              <name>{$POLICY_NAME}</name>
            </dscp>
          </classifiers>
        </unit>
      </interface>
    </interfaces>
    <scheduler-maps>
      <name>{$POLICY_NAME}</name>
      <forwarding-class>
        <name>{$CLASS_NAME}</name>
        <scheduler>{$CLASS_NAME}-SCHED</scheduler>
      </forwarding-class>
    </scheduler-maps>
    <schedulers>
      <name>{$CLASS_NAME}-SCHED</name>
      <transmit-rate>
        <percent>{$CLASS_BW}</percent>
      </transmit-rate>
      <buffer-size>
        <percent>{$CLASS_BW}</percent>
      </buffer-size>
      <priority>strict-high</priority>
    </schedulers>
  </class-of-service>
</configuration>
