<ncs-package xmlns="http://tail-f.com/ns/ncs-packages">
  <name>myserv</name>
  <package-version>1.0</package-version>
  <description>Skeleton for a python based resource facing service</description>
  <ncs-min-version>4.2</ncs-min-version>

  <!-- It's possible to add more components to the -->
  <!-- same package, multiple services, data providers etc -->

  <component>
    <name>myserv</name>
    <application>
      <python-class-name>myserv.Main</python-class-name>
    </application>
  </component>
</ncs-package>
