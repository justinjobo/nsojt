  <ncs-min-version>3.0</ncs-min-version>
  <required-package>
    <name>router-nc-1.0</name>
  </required-package>
  <component>
    <name>syslog</name>
    <callback>
      <java-class-name>com.example.syslog.SyslogServiceRFS</java-class-name>
    </callback>
  </component>
</ncs-package>
